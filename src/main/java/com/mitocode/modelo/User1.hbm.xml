<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
   
    <class name="com.mitocode.modelo.User" table="user">
        
        <id name="id" type="integer" column="id" >
            <generator class="increment" ></generator>
        </id>
        <property name="name" type="string" column="name"></property>
        <property name="lastName" type="string" column="lastname"></property>
        <property name="password" type="string" column="password"></property>
        <property name="type" type="string" column="type"></property>
        <property name="age" type="integer" column="age"></property>
        <property name="locationId" type="integer" column="location_id"></property>
        
    </class>
  

</hibernate-mapping>
